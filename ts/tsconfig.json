{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./out",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    ".",
    "../node_modules/ts-jest/globals.d.ts"
  ],
  "exclude": [
    "./out",
    "./node_modules"
  ],
  "typeRoots": [
    "./node_modules/@types/"
  ]
}
